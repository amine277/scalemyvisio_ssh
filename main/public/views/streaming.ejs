    </div>-->

    <!--                Streaming SECTION                           -->

    <!--                Streaming SECTION                           -->

    <div id="streamingSection">
      <div id="StreamDiv">
        <div id="videoStreming">
          <video
            id="player"
            class="video-js vjs-default-skin"
            width="900px"
            controls
            preload="auto"
          >
            <source
              src="http://localhost:8080/hls/test.m3u8"
              type="application/x-mpegURL"
            />
          </video>
          <script>
            var player = videojs("#player");
          </script>
        </div>

        <div id="ParticipantsStreaming" class="hidden">
          <div class="chat_header">
            <p>Participants</p>
            <ul id="ParticipantList"></ul>
          </div>
        </div>

        <div id="ChatStreaming" class="hidden">
          <div class="chat_header">
            <p>Chat</p>
            <ul id="conteneurMessage"></ul>
          </div>
          <!--<form action="" id="chatForm" onsubmit="rc.sendChat();return false"> 
                onclick="joinRoom(nameInput.value, roomidInput.value)"-->
          <div id="chat_message">
            <input
              id="chat_input"
              type="text"
              placeholder="Type message here"
            />
          </div>
        </div>
      </div>
      <div id="StreamingButtons">
        <div class="buttons_main">
          <div id="passageStreamingVisio" onclick="goVisio()">
            <i class="fas fa-video"></i>
            <p>Join</p>
          </div>
        </div>
        <div class="buttons_deco">
          <div>
            <i class="fas fa-comment-alt" onclick="chatStreamingHide()"></i>
            <p>Chat</p>
          </div>
        </div>
        <div>
          <a href="Home.html">
            <div>
              <div>
                <i class="fas fa-door-open"></i>
                <p>Exit</p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
  </body>

  <footer>
    <script src="/scripts/index.js"></script>
    <script type="text/javascript">
      socket.emit("addViewer", {
        viewerId: sessionStorage.getItem("Id"),
        roomId: sessionStorage.getItem("stream_id"),
      });
    </script>
  </footer>
